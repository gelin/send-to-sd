<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/how_to_use_dialog_root">

<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="5sp">
    
    <TextView android:text="@string/how_to_use_1_1" 
        android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    <TextView android:text="@string/how_to_use_1_2"
        android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    <TextView android:text="@string/how_to_use_1_3"
        android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    
    <TextView android:text="@string/how_to_use_2_0"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_marginTop="5sp"/>
    <TextView android:text="@string/how_to_use_2_1"
        android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    <TextView android:text="@string/how_to_use_2_2"
        android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    <TextView android:text="@string/how_to_use_2_3"
        android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    <TextView android:text="@string/how_to_use_2_4"
        android:layout_width="fill_parent" android:layout_height="wrap_content"/>
    
</LinearLayout>

</ScrollView>